
sub read_file {
    my %hash;
    open CONFIG, "commands.txt" or die;
    while (my $line = <CONFIG>) {
        chomp $line;
        my ($lvl, $cmd) = split /:/, $line;
        $hash{$lvl} = $cmd;
    }
    close CONFIG;
    return $hash;
}
my %hash = read_file;
foreach $char(keys %hash){
	print("$char => $hash{$char}\n");
}


